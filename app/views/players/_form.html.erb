<%=form_for @player, :html => {:multipart => true} do |f|%>
	<div class="row">
		<div class="form-inline form-group col-xs-4">
			<%=f.label :first_name%>
			<%=f.text_field :first_name,:class=>"form-control ml5"%>
		</div>
		<div class="form-inline form-group col-xs-4">
			<%=f.label :last_name%>
			<%=f.text_field :last_name,:class=>"form-control ml5"%>
		</div>
		<div class="form-inline form-group col-xs-4">
			<%=f.label :weight, "Weight(lbs)"%>
			<%=f.text_field :weight,:class=>"form-control ml5"%>
		</div>
		<div class="form-inline form-group col-xs-8">
			<%=label_tag :height%>
			<%=f.text_field :feet,:class=>"form-control"%>
			<%=label_tag "'"%>
			<%=f.text_field :inch,:class=>"form-control"%>
			<%=label_tag "\""%>
		</div>
		<div class="form-inline form-group col-xs-4">
			<%=f.label :dob, "Date of Birth"%>
			<%=f.text_field :dob,:class=>"form-control ml5 basic-datepicker"%>
		</div>

		<div class="form-inline form-group col-xs-4">
			<%=f.label :age%>
			<%=f.text_field :age,:class=>"form-control ml5"%>
		</div>
		<div class="form-inline form-group col-xs-4">
			<%=f.label :avatar%>
			<%=f.file_field :avatar,:class=>"form-control ml5"%>
		</div>
		<div class="form-inline form-group col-xs-4">
			<%=label_tag :player_data,"Players Data (CSV)"%>
			<%=file_field_tag :player_data,:class=>"form-control ml5"%>
		</div>
		<div class="col-xs-12">
			<%=f.submit "Submit",:class=>"btn btn-success pull-right"%>
		</div>

	</div>
<%end%>